{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./app/apps/krok/types"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@os/*": ["./app/*"],
      "@f/*": ["./app/apps/flow/*"],
      "@fc/*": ["./app/apps/flow/components/*"],
      "@dis/*": ["./app/apps/discord/*"],
      "@disc/*": ["./app/apps/discord/components/*"],
      "@fig/*": ["./app/apps/figma/*"],
      "@flow/*": ["./app/apps/flow/*"],
      "@flowc/*": ["./app/apps/flow/components/*"],
      "@an/*": ["./app/apps/anki/*"],
      "@anc/*": ["./app/apps/anki/components/*"],
      "@stl/*": ["./app/apps/obsidian/*"],
      "@stlc/*": ["./app/apps/obsidian/components/*"],
      "@opal/*": ["./app/apps/opal/*"],
      "@opals/*": ["./app/apps/opal/src/*"],
      "@opalc/*": ["./app/apps/opal/components/*"]
    },
    "target": "es2018",
    "types": ["@uploadcare/blocks/types/jsx"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/types/**/*.tsx",
    "apps/figma/types/**/*.d.ts",
    "app/apps/streetfighter/game/index.js"
  ],
  "exclude": ["node_modules"]
}
